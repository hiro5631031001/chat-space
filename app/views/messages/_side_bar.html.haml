.side-bar
  .side-bar__user-name
    .side-header
      %p.side-header__user-name
        = current_user.name
      %ul.side-header__menu
        %li.side-header__menu--new-group
          = link_to new_group_path,class: 'new-group-btn' do
            = icon('fas', 'edit')
        %li.side-header__menu--edit-user
          = link_to edit_user_path(current_user), class: 'edit-user-btn' do
            = icon('fas', 'cog')


  .side-bar__group-list
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group), class:"group" do
          %p.group__group-name
            = group.name
          %p.group__latest-message
            = group.show_last_message
